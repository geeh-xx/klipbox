<% provide(:title, "Edit user") %>
<h1>Noticias</h1>

<ul>

  <% @articles.each do |article| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Titulo: <%= article.title %></span>
            <p>Noticia: <%= article.text %></p>
            <p>Data: <%= article.date %></p>
          </div>
          <div class="card-action">
            <%=  link_to 'Ver Noticia', article_url(article.id) %>

            <%=  link_to 'Editar Noticia', edit_article_path(article) %>
 
            <%=  link_to 'Deletar Noticia', article, method: :delete,data: { confirm: "Deseja realmente deletar estar noticia?" } %>
          </div>
        </div>
      </div>
    </div>
  <% end -%>

</ul>
<div class="btn-floating btn-large waves-effect waves-light red"><%=  link_to '+', new_article_path %></div>

